{
  "name": "littera",
  "version": "1.1.0",
  "main": "dest/littera.css",
  "description": "Nano typograpic framework",
  "keywords": [
    "css",
    "typography",
    "framwork",
    "stylus",
    "boilerplate",
    "frontend"
  ],
  "homepage": "https://github.com/zoxon/littera",
  "author": "Velicko Konstantin <zoxon.box@gmail.com> (https://github.com/zoxon)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zoxon/littera.git"
  },
  "bugs": {
    "url": "https://github.com/zoxon/littera/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env PRE_COMMIT=true lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,markdown}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=6.0.0",
    "npm": "~3.0.0"
  },
  "scripts": {
    "clean:dest": "rimraf ./dest",
    "clean": "npm-run-all clean:*",
    "mkdir:dest": "mkdirp ./dest",
    "mkdir": "npm-run-all mkdir:*",
    "build:css": "stylus --include-css --include node_modules ./src/index.styl --out ./dest/littera.css",
    "postbuild:css": "postcss ./dest/littera.css > ./dest/littera.min.css",
    "build": "npm-run-all clean mkdir build:*",
    "prod": "cross-env NODE_ENV=production npm run build",
    "watch:css": "npm run build:css -- --watch",
    "watch": "npm-run-all watch:*",
    "dev": "npm run watch",
    "start": "npm run dev"
  },
  "dependencies": {
    "normalize.css": "^8.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.7",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.3",
    "perfectionist": "^2.4.0",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.0.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-reporter": "^7.0.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "stylus": "^0.54.8"
  }
}
